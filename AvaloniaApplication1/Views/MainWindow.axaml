<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.MainWindow"
        Title="File Path Selector">
    
    <DockPanel Margin="20">
        <!-- 文件路径输入框和浏览按钮 -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="10">
            <TextBox x:Name="PathTextBox" Width="200" Height="10" 
                     Watermark="Select a folder..." IsReadOnly="True"/>
            <Button Content="Browse..." Click="BrowseFolderButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>