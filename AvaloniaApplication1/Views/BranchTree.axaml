<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:AvaloniaApplication1.Views.Controls"
             xmlns:models="clr-namespace:AvaloniaApplication1.Models"
             xmlns:vm="clr-namespace:AvaloniaApplication1.ViewModels"
             mc:Ignorable="d"
             x:Class="AvaloniaApplication1.Views.BranchTree"
             x:DataType="vm:BranchTreeViewModel">
    
    <TreeView x:Name="FolderTreeView">
        <TreeView.ItemsSource>
            <Binding Path="Nodes" Mode="OneWay"/>
        </TreeView.ItemsSource>
        <TreeView.DataTemplates>
            <TreeDataTemplate DataType="models:BranchTreeNode" ItemsSource="{Binding Children}">
                <controls:BranchTreeNodeView/>
            </TreeDataTemplate>
        </TreeView.DataTemplates>
    </TreeView>
</UserControl>