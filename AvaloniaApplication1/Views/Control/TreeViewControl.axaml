<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AvaloniaApplication1.Models"
             xmlns:viewModel="clr-namespace:AvaloniaApplication1.ViewModel"
             mc:Ignorable="d" 
             d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.Views.Control.TreeViewControl">
    
    <TreeView Margin="0,20,0,0"
              x:DataType="viewModel:TreeViewModel" >
        <TreeView.ItemsSource>
            <Binding Path="Nodes" />
        </TreeView.ItemsSource>
        <TreeView.ItemTemplate>
            <TreeDataTemplate DataType="{x:Type models:TreeNode}" 
                              ItemsSource="{Binding Children}">
                <TextBlock Text="{Binding Name}"/>
            </TreeDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>