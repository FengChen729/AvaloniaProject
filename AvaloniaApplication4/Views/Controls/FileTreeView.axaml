<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaApplication4.ViewModels"
             x:Class="AvaloniaApplication4.Views.Controls.FileTreeView"
             x:DataType="vm:FileTreeViewModel">
    <TreeView ItemsSource="{Binding TreeNodes}">
        <TreeView.DataTemplates>
            <TreeDataTemplate x:DataType="vm:TreeNodeViewModel" ItemsSource="{Binding Children}">
                <TextBlock Text="{Binding Name}" />
            </TreeDataTemplate>
        </TreeView.DataTemplates>
    </TreeView>
</UserControl>