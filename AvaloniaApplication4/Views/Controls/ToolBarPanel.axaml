<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaApplication4.ViewModels"
             x:Class="AvaloniaApplication4.Views.Controls.ToolBarPanel"
             x:DataType="vm:ToolBarPanelViewModel">
    
    <StackPanel Orientation="Horizontal" Margin="5">
        <Button Content="📁" Command="{Binding OpenFolderCommand}"/>
        <Button Content="💾" Command="{Binding SaveCommand}"/>
        <TextBox Width="200" Watermark="搜索..."/>
    </StackPanel>
</UserControl>