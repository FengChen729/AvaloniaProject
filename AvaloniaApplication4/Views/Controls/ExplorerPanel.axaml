<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaApplication4.ViewModels"
             xmlns:views="clr-namespace:AvaloniaApplication4.Views.Controls"
             x:Class="AvaloniaApplication4.Views.Controls.ExplorerPanel"
             x:DataType="vm:ExplorerPanelViewModel">
    <Grid ColumnDefinitions="80,*">
        <!-- 左侧按钮区 -->
        <StackPanel Grid.Column="0" Spacing="10" Margin="5">
            <Button Content="文件" Command="{Binding ShowFileCommand}"/>
            <Button Content="节点" Command="{Binding ShowNodeCommand}"/>
            <Button Content="进程" Command="{Binding ShowProcessCommand}"/>
        </StackPanel>

        <!-- 右侧 TreeView 区 -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentTreeView}">
            <ContentControl.DataTemplates>
                <DataTemplate x:DataType="vm:FileTreeViewModel">
                    <views:FileTreeView DataContext="{Binding}" />
                </DataTemplate>
                <DataTemplate x:DataType="vm:NodeTreeViewModel">
                    <views:NodeTreeView DataContext="{Binding}" />
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>
    </Grid>
</UserControl>