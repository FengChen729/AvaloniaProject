<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvaloniaApplication4.ViewModels"
             x:Class="AvaloniaApplication4.Views.Controls.StatusBarPanel"
             x:DataType="vm:StatusBarPanelViewModel">
    
    <Border Background="LightGray" Height="30" Padding="10">
        <TextBlock VerticalAlignment="Center" Text="{Binding StatusText}"/>
    </Border>
</UserControl>
