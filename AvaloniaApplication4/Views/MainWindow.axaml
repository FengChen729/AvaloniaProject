<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AvaloniaApplication4.Views.Controls"
        x:Class="AvaloniaApplication4.Views.MainWindow"
        Width="1200" Height="800"
        Title="MainWindow">

    <DockPanel>

        <!-- 顶部菜单栏 -->
        <views:MenuPanel DockPanel.Dock="Top" x:Name="MenuPanel"/>

        <!-- 工具栏 -->
        <views:ToolBarPanel DockPanel.Dock="Top" x:Name="ToolBarPanel"/>

        <!-- 底部状态栏 -->
        <views:StatusBarPanel DockPanel.Dock="Bottom" x:Name="StatusBarPanel"/>

        <!-- 主区域：左侧导航 + 右侧工作区 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧 ExplorerPanel 控件 -->
            <views:ExplorerPanel Grid.Column="0" x:Name="ExplorerPanel"/>

        </Grid>
    </DockPanel>
</Window>