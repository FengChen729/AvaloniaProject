<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AvaloniaApplication4.Views.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication4.Views.MainWindow"
        Title="MainWindow">
    <StackPanel Orientation="Vertical">
        <controls:MenuPanel DockPanel.Dock="Top" x:Name="MenuPanel"/>
        <controls:ToolBarPanel DockPanel.Dock="Top" x:Name="ToolBarPanel"/>
        <controls:StatusBarPanel DockPanel.Dock="Bottom" x:Name="StatusBarPanel"/>
    </StackPanel>
</Window>
