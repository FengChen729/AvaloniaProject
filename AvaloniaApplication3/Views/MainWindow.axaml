<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaApplication3.Views"
        xmlns:controls1="clr-namespace:AvaloniaApplication3.Views.Controls"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication3.Views.MainWindow"
        Title="DevLayout - Avalonia">
    <DockPanel>

        <!-- 顶部工具栏 -->
        <views:TitleBar DockPanel.Dock="Top" />

        <!-- 底部状态栏 -->
        <Border Background="#1e1e1e" Height="24" DockPanel.Dock="Bottom">
            <TextBlock Foreground="LightGray" VerticalAlignment="Center" Margin="10,0">状态：Ready</TextBlock>
        </Border>
        
        <!-- 主体区域 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <!-- 左侧工具栏 -->
            <controls1:ToolSidebar Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Name="Sidebar"/>

            <!-- 左侧导航栏 -->
            <controls1:ExplorerPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Name="Explorer"/>
            
            <!-- 主编辑区 -->
            <controls1:EditorArea Grid.Column="2" Grid.Row="0"/>

            <!-- 控制台输出 -->
            <views:ConsolePanel Grid.Column="2" Grid.Row="1"/>
        </Grid>
    </DockPanel>
</Window>
